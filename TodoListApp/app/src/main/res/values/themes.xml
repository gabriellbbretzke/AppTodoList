<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TodoList" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary color definitions -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Background color for light theme -->
        <item name="android:colorBackground">#FFFFFF</item>
    </style>

    <style name="Theme.TodoList" parent="Base.Theme.TodoList" />

    <style name="RoundedButton">
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/background_main</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="RoundedInput">
        <item name="android:background">@drawable/rounded_input</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:fontFamily">@font/adlam_display</item>
    </style>
</resources>